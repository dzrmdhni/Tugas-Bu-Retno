#include <iostream>
using namespace std;
int main ()
{
    int a,b,c,d,e,f,pilih;
    cout <<"Masukkan bilangan pertama : ";
    cin>>a;
    
    cout <<"Masukkan bilangan kedua :";
    cin>>b;
    
    cout<<"Pilih operator"<<endl;
    cout<<"\n1. Penjumlahan"<<endl;
    cout<<"\n2. Pengurangan"<<endl;
    cout<<"\n3. Perkalian"<<endl;
    cout<<"\n4. Pembagian"<<endl;
    
    cout<<"Masukkan pilihan : ";
    cin>>pilih;
    
    if (pilih == 1)
    {
     c=a+b;
     cout<<"Hasil: "<<c<< endl;
    }
    if (pilih == 2)
    {
    d=a-b;
    cout<<"Hasil: "<<d<< endl;
    }
    if (pilih == 3)
    {
    e=a*b;
    cout<<"Hasil: "<<e<< endl;
    }
    if (pilih == 4)
    {
    f=a/b;
    cout<<"Hasil: "<<f<< endl;
    }
    
    return 0;
    
}
